{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}